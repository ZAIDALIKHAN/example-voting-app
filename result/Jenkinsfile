pipeline {
    agent any

    triggers {
        githubPush()
    }

    environment {
        AWS_ACCOUNT_ID  = "085013191936"
        AWS_REGION      = "us-east-1"
        ECR_REGISTRY    = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/demo"
        IMAGE           = "${ECR_REGISTRY}:latest"
    }

    stages {

        stage('Validate Changes') {
            when {
                not { changeset "**/result/**" }
            }
            steps {
                error("No changes detected in worker/ â€” stopping pipeline!")
            }
        }

        stage('Build Docker Image') {
            when {
                changeset "**/result/**"
            }
            steps {
                sh """
                    cd worker
                    docker build -t ${IMAGE} .
                """
            }
        }

        stage('Login to ECR') {
            when {
                changeset "**/result/**"
            }
            steps {
                sh """
                    aws ecr get-login-password --region ${AWS_REGION} \
                    | docker login --username AWS --password-stdin ${ECR_REGISTRY}
                """
            }
        }

        stage('Push Image to ECR') {
            when {
                changeset "**/result/**"
            }
            steps {
                sh "docker push ${IMAGE}"
            }
        }
    }

    post {
        always {
            echo "Pipeline completed."
        }
    }
}
